<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <title>GETFit</title>

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>

    <!-- Custom styles for this template -->
    <link href="/stylesheets/dashboard.css" rel="stylesheet">

    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

  </head>

  <body ng-app="GETfit">
    <div ng-include src="'/header/header.ejs'"></div>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <ui-view></ui-view>

            </div>
        </div>
        <script type="text/ng-template" id="/home.html">
            <div>
                <h1>GETfit</h1>
            </div>

            <div class="page-header">
                <h1>Welcome to GETfit</h1>
            </div>
            <div ng-repeat="exercise in workoutPlan | orderBy: '+set'">
                {{exercise.title}} - Group: {{exercise.group}}
                <span>
                    <a href="#/exercises/{{$index}}">Information</a>
                </span>
            </div>

            <form ng-submit="addExercise()">
                <h3>Add a new exercise</h3>
                <div class="form-group">
                    <input type="text"
                       class="form-control"
                       placeholder="Title"
                       ng-model="title">
                    </input>
                </div>
                <div class="form-group">
                    <input type="number"
                       class="form-control"
                       placeholder="Group"
                       ng-model="group">
                    </input>
                </div>
                <button type="submit" class="btn btn-primary">Add Exercise</button>
            </form>
        </script>
        <script type="text/ng-template" id="/exercises.html">
            <div class="page-header">
                <h3>
                    {{exercise.title}}
                </h3>
            </div>
            <div ng-repeat="info in exercise.goal">
                Rep: {{info.rep}} Set: {{info.set}}
            </div>

            <form ng-submit="addFitnessGoal()" style="margin-top:30px;">
                <h3>Add Fitness Goal</h3>
                <div class="form-group">
                    <input type="number"
                       class="form-control"
                       placeholder="Rep"
                       ng-model="rep">
                    </input>
                </div>
                <div class="form-group">
                    <input type="number"
                       class="form-control"
                       placeholder="Set"
                       ng-model="set">
                    </input>
                </div>
                <button type="submit" class="btn btn-primary">Add Goal</button>
            </form>
        <script>

    </div>



    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
  </body>
</html>
