<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <title>getFit</title>

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/planWorkout.js"></script>

    <!-- Custom styles for this template -->
    <link href="/stylesheets/dashboard.css" rel="stylesheet">

    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

  </head>

  <body ng-app="planWorkout">
    <div ng-include src="'/header/header.ejs'"></div>

    </nav>
    <div class="container">
        <div class="row">

            <ui-view></ui-view>



        </div>
        <script type="text/ng-template" id="/planWorkout.html">
        <div class="col-md-6 col-md-offset-3">
            <div class="page-header">
                <h1>my Workouts</h1>
            </div>

            <div ng-repeat="workout in workouts">
                {{workout.workoutGroup}} - {{workout.exercise1}}
            </div>
                <form ng-submit="addWorkout()">
                    <h3>Add up to 3 Groups of Exercises</h3>
                    <div class="form-group">
                        <input type="number"
                           class="form-control"
                           placeholder="Title"
                           ng-model="title">
                        </input>
                    </div>
                    <div class="form-group">
                        <input type="number"
                           class="form-control"
                           placeholder="Sets"
                           ng-model="workoutSets">
                        </input>
                    </div>
                    <div class="form-group">
                        <input type="number"
                           class="form-control"
                           placeholder="Reps"
                           ng-model="workoutReps">
                        </input>
                    </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <input type="text"
                   class="form-control"
                   placeholder="Exercise 1"
                   ng-model="exercise1">
                </input>
            </div>
            <div class="form-group">
                <input type="text"
                   class="form-control"
                   placeholder="Exercise 2"
                   ng-model="exercise2">
                </input>
            </div>
            <div class="form-group">
                <input type="text"
                   class="form-control"
                   placeholder="Exercise 3"
                   ng-model="exercise3">
                </input>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <input type="text"
                   class="form-control"
                   placeholder="Exercise 4"
                   ng-model="exercise4">
                </input>
            </div>
            <div class="form-group">
                <input type="text"
                   class="form-control"
                   placeholder="Exercise 5"
                   ng-model="exercise5">
                </input>
            </div>
            <div class="form-group">
                <input type="text"
                   class="form-control"
                   placeholder="Exercise 6"
                   ng-model="exercise6">
                </input>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <input type="text"
                   class="form-control"
                   placeholder="Exercise 7"
                   ng-model="exercise7">
                </input>
            </div>
            <div class="form-group">
                <input type="text"
                   class="form-control"
                   placeholder="Exercise 8"
                   ng-model="exercise8">
                </input>
            </div>
            <div class="form-group">
                <input type="text"
                   class="form-control"
                   placeholder="Exercise 9"
                   ng-model="exercise9">
                </input>
            </div>
        </div>
        <div class="col-md-6 col-md-offset-3">
            <button type="submit" class="btn btn-primary">Add Workout</button>
            <br><br>
        </form>
        </script>
    </div>



    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!--<script src="/javascripts/bootstrap.min.js"></script>-->
  </body>
</html>
